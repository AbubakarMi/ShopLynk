{
  "name": "shoplynk",
  "version": "1.0.0",
  "description": "WhatsApp Store Builder - A SaaS platform for creating WhatsApp-based online stores",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "server",
    "shared"
  ],
  "scripts": {
    "start:web": "npm run dev --workspace=web",
    "start:mobile": "npm start --workspace=mobile",
    "start:server": "npm run dev --workspace=server",
    "dev": "concurrently \"npm run start:web\" \"npm run start:server\"",
    "build:web": "npm run build --workspace=web",
    "build:server": "npm run build --workspace=server",
    "build:mobile": "npm run build --workspace=mobile",
    "build": "npm run build:web && npm run build:server",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/shoplynk.git"
  },
  "keywords": [
    "whatsapp",
    "e-commerce",
    "store-builder",
    "saas",
    "monorepo"
  ],
  "author": "ShopLynk Team",
  "license": "MIT"
}
